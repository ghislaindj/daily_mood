<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="modal-body devise-form">
    <%= f.email_field :email, placeholder: "Email address", autofocus: true %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    <% end -%>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary btn-md pull-left" data-toggle="modal" data-target="#signup">
        Sign Up
    </button>
    <%= f.submit "Log In", class: 'btn btn-success' %>
  </div>
<% end %>

