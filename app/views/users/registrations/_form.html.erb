<%= form_for(setup_user(resource), as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="modal-body devise-form">
    <%= devise_error_messages! %>
    <%= f.email_field :email, placeholder: "Email address", autofocus: true %>
    <%#= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
    <%#= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off" %>
    <%= f.label :moods, "What is your mood today?", :class => "question" %><br />
    <%= f.fields_for :moods do |g| %>
      <div class="btn-group" data-toggle="buttons">
        <label for="first" class="btn btn-danger">
          <%= g.radio_button :value, Settings.moods[0].value, :id=>"first", :style=>"display:none;", type: "radio" %>
          <%= image_tag Settings.moods[0].icon %>
        </label>
        <label for="second" class="btn btn-primary">
          <%= g.radio_button :value, Settings.moods[1].value, :id=>"second", :style=>"display:none;", type: "radio", :checked => "true"  %>
          <%= image_tag Settings.moods[1].icon %>
        </label>
        <label for="third" class="btn btn-success">
          <%= g.radio_button :value, Settings.moods[2].value, :id=>"third", :style=>"display:none;", type: "radio"  %>
          <%= image_tag Settings.moods[2].icon %>
        </label>
      </div>
    <% end %>
  </div>
  <%#= render "users/shared/links" %>
  <div class="modal-footer">
    <p class="pull-left">
<!--       <button class="btn btn-success btn-md pull-left" data-toggle="modal" data-target="#signin" onclick="$('#signup').modal('hide')">
        Already user ?
      </button> -->
    </p>
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>